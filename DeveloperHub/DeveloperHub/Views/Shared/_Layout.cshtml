@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeveloperHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/DeveloperHub.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
</head>
<body>
    <!-- tt-mobile menu -->
    <nav class="panel-menu" id="mobile-menu">
        <ul>
        </ul>
        <div class="mm-navbtn-names">
            <div class="mm-closebtn">
                Close
                <div class="tt-icon">
                    <i></i>
                </div>
            </div>
            <div class="mm-backbtn">Back</div>
        </div>
    </nav>
    <header id="tt-header">
        <div class="container">
            <div class="row tt-row no-gutters">
                <div class="col-auto">
                    <!-- toggle mobile menu -->
                    <a class="toggle-mobile-menu" href="#">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </a>
                    <!-- /toggle mobile menu -->
                    <!-- logo -->
                    <div class="tt-logo">
                        <a asp-controller="Home" asp-action="Index"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRdSAIfVWemaen5arzKIXimhgXhgEFMs9_UrQ&usqp=CAU" alt="" style="width:5rem;height:100%;"></a>
                    </div>
                    <!-- /logo -->
                    <!-- desctop menu -->
                    <div class="tt-desktop-menu">
                        <nav>
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index"><span>Categories</span></a></li>
                                <li><a asp-controller="Home" asp-action="Index"><span>Trending</span></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="col-auto ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                         
                            <button class="btn btn-outline-success" type="button" aria-expanded="false">
                                <i class="bi bi-person-badge"></i> @User.Identity.Name
                            </button>

                        <span style="padding: 5px;"></span>
                        <form asp-controller="Account" asp-action="Logout">
                            <button class="btn btn-outline-danger my-2 my-sm-0">
                                <i class="bi bi-box-arrow-in-right"></i> Log out
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="tt-account-btn">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Log in</a>
                            <a asp-controller="Account" asp-action="Signup" class="btn btn-secondary">Sign up</a>
                        </div>
                    }
                    <a asp-controller="Home" asp-action="Create" class="tt-btn-create-topic">
                        <span class="tt-icon">
                            <i class="bi bi-plus-square" style="font-size:2rem;"></i>
                        </span>
                    </a>
                </div>

                
                </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DeveloperHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/js/bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add these scripts to your _Layout.cshtml or any other layout file -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/jquery.mmenu.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
